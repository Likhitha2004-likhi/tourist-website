<script>
  function animateOnView() {
    const h1 = document.querySelector('.about-us-card-container h1');
    const p = document.querySelector('.about-us-card-container p');
    const windowHeight = window.innerHeight;

    const h1Rect = h1.getBoundingClientRect();
    const pRect = p.getBoundingClientRect();

    if (h1Rect.top < windowHeight - 100) {
      h1.classList.add('animate');
    }
    if (pRect.top < windowHeight - 100) {
      p.classList.add('animate');
    }
  }

  // Run on scroll
  window.addEventListener('scroll', animateOnView);

  // Run on load (for refresh)
  window.addEventListener('load', animateOnView);
</script>


<script>
  function animateAboutSections() {
    const aboutBlocks = document.querySelectorAll('.about-block');
    const windowHeight = window.innerHeight;

    aboutBlocks.forEach(block => {
      const rect = block.getBoundingClientRect();
      if (rect.top < windowHeight - 100) {
        block.classList.add('animate');
      }
    });
  }

  window.addEventListener('scroll', animateAboutSections);
  window.addEventListener('load', animateAboutSections);
</script>

<script>
  const backToTopBtn = document.getElementById("backToTop");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 300) {
      backToTopBtn.style.display = "block";
    } else {
      backToTopBtn.style.display = "none";
    }
  });

  backToTopBtn.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth"
    });
  });
</script>

