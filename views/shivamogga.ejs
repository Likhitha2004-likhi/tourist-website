<script>
  function animateOnView() {
    const h1 = document.querySelector('.shm-us-card-container h1');
    const p = document.querySelector('.shm-us-card-container p');
    const windowHeight = window.innerHeight;

    const h1Rect = h1.getBoundingClientRect();
    const pRect = p.getBoundingClientRect();

    if (h1Rect.top < windowHeight - 100) {
      h1.classList.add('animate');
    }
    if (pRect.top < windowHeight - 100) {
      p.classList.add('animate');
    }
  }

  // Run on scroll
  window.addEventListener('scroll', animateOnView);

  // Run on load (for refresh)
  window.addEventListener('load', animateOnView);
</script>


<script>
